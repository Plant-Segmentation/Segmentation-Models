{
    "name": "PSPNet",
    "data_name": "PLANT_Explant_grid20",
    "n_gpu": 1,
    "use_synch_bn": true,

    "arch": {
        "type": "PSPNet",
        "args": {
            "backbone": "resnet50",
            "freeze_bn": false,
            "freeze_backbone": false
        }
    },

    "train_loader": {
        "type": "PLANT",
        "args":{
            "data_dir": "data/Plant-Explant/grid-20/",
            "batch_size": 6,
            "base_size": 400,
            "crop_size": 400,
            "num_classes": 21,
            "rgb_ext": "_rgb.jpg",
            "ann_ext": "_seg.png",
            "augment": true,
            "shuffle": true,
            "scale": true,
            "flip": false,
            "rotate": true,
            "blur": false,
            "split": "train",
            "num_workers": 2 
        }
    },

    "val_loader": {
        "type": "PLANT",
        "args":{
            "data_dir": "data/Plant-Explant/grid-20/",
            "batch_size": 6,
            "base_size": 400,
            "crop_size": 400,
            "num_classes": 21,
            "rgb_ext": "_rgb.jpg",
            "ann_ext": "_seg.png",
            "val": true,
            "split": "val",
            "num_workers": 2 
        }
    },

    "optimizer": {
        "type": "SGD",
        "differential_lr": true,
        "args":{
            "lr": 0.01,
            "weight_decay": 1e-4,
            "momentum": 0.9
        }
    },

    "loss": "CrossEntropyLoss2d",
    "class_weight":[ 1.0, 3.0, 3.0, 3.0, 3.0,
                     3.0, 3.0, 3.0, 3.0, 3.0,
                     3.0, 3.0, 3.0, 3.0, 3.0,
                     3.0, 3.0, 3.0, 3.0, 3.0,
                     3.0],
    "ignore_index": 255,
    "lr_scheduler": {
        "type": "Poly",
        "args": {}
    },

    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 10,
  
        "monitor": "max Mean_IoU",
        "early_stop": 10,
        
        "tensorboard": true,
        "log_dir": "saved/runs",
        "log_per_iter": 50,
        "print_per_iter": 20,

        "val": true,
        "val_per_epochs": 20
    }
}
